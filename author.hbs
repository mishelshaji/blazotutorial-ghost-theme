{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Class for <body> --}}
{{#contentFor "special_body_class"}}bg-gray-100{{/contentFor}}

{{!-- Header ./partials/site-header.hbs --}}
{{> "site-header"}}

<div class="section blog-posts kusi-blog">
    <div class="section--inner w-full mx-auto max-w-3xl px-6">

        {{#author}}

        {{!-- Header --}}
        <div class="mb-12 container-sm text-center max-w-xl mx-auto">
            <img
                class="rounded-full w-24 w-24 inline-block object-cover mb-4"
                src="{{#if profile_image}}{{img_url profile_image size="xs"}}{{else}}{{asset "img/avatar.png"}}{{/if}}"
                alt="{{name}}"
            />
            <h1 class="font-semibold mt-0 mb-4 text-gray-800">{{name}}</h1>
            {{#if bio}}<p class="opacity-75">{{bio}}</p>{{/if}}

            {{!-- Author Facebook and Twitter --}}
            <div class="flex mt-8 justify-center">
                {{#if facebook}}
                    <a
                    href="{{facebook_url}}"
                    title="Facebook"
                    class="flex items-center mt-2 mx-2 px-4 py-2 rounded-lg border text-gray-700 hover:bg-gray-200 hover:border-gray-500"
                    target="_blank"
                    rel="noopener noreferrer">
                        <svg class="fill-current mr-2 w-4 h-4"><use xlink:href="#icon-facebook"></use></svg>
                        Facebook
                    </a>
                {{/if}}
                {{#if twitter}}
                    <a
                        href="{{twitter_url}}"
                        title="{{twitter}}"
                        class="flex items-center mt-2 mx-2 px-4 py-2 rounded-lg border text-gray-700 hover:bg-gray-200 hover:border-gray-500"
                        target="_blank"
                        rel="noopener noreferrer">
                            <svg class="fill-current mr-2 w-4 h-4"><use xlink:href="#icon-twitter"></use></svg>
                            Twitter
                    </a>
                {{/if}}
                {{#if website}}
                    <a
                        href="{{website}}"
                        class="flex items-center mt-2 mx-2 px-4 py-2 rounded-lg border text-gray-700 hover:bg-gray-200 hover:border-gray-500"
                        target="_blank"
                        rel="noopener noreferrer">
                        <svg class="fill-current mr-2 w-4 h-4"><use xlink:href="#icon-link"></use></svg>
                        website
                    </a>
                {{/if}}
            </div>
        </div>

        {{/author}}

        {{!-- Post Card - ./partials/post-card.hbs --}}
        {{#foreach posts visibility="all"}}
            {{^has tag="docs"}}
                {{> "post-card"}}
            {{/has}}
        {{/foreach}}

    </div>

    {{pagination}}
</div>

{{!-- Footer ./partials/site-footer.hbs --}}
{{> "site-footer"}}